<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEEEEE"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar_new"
            layout="@layout/toolbar_new" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EEEEEE">

            <TextView
                android:id="@+id/TextView00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:autoLink="web"
                android:linksClickable="true"
                android:text="Сайт музея: kuzbassizo.ru"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/TextView00"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:autoLink="phone"
                android:linksClickable="true"
                android:text="Телефон для справок:\n+7 (3842) 36 64 78 , касса\n+7 (3842) 36 50 33 , просветительский отдел"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/TextView01"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:autoLink="email"
                android:linksClickable="true"
                android:text="Вопросы, связанные с деятельностью Кемеровского областного музея изобразительных искусств, можно направлять по адресу электронной почты: kemizo@mail.ru
            \nИНН 4207044989"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/TextView03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/TextView02"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:autoLink="map"
                android:text="Адрес: Советский Проспект, 48, Кемерово, Кемеровская область, 650991 ; остановка «Драмтеатр»"
                android:textColor="#000000"
                android:textSize="16sp" />

        </RelativeLayout>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/contact_nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer" />

</android.support.v4.widget.DrawerLayout>
<!-- а вообще мб webview и autlolink all-->