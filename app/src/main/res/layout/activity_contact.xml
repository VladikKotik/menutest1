<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/TextView_000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contact_zagolovok"/>


        <TextView
            android:id="@+id/TextView00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TextView_000"
            android:autoLink="web"
            android:linksClickable="true"
            android:text="Сайт музея: kuzbassizo.ru" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TextView00"
            android:autoLink="phone"
            android:linksClickable="true"
            android:text=" Телефон для справок:\n +7 (3842) 36 64 78 , касса\n
+7 (3842) 36 50 33 , просветительский отдел" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TextView01"
            android:autoLink="email"
            android:linksClickable="true"
            android:text="Вопросы, связанные с деятельностью Кемеровского областного музея изобразительных искусств, можно направлять по адресу электронной почты: kemizo@mail.ru
            \nИНН 4207044989" />

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TextView02"
            android:text="Адрес: 650991, г. Кемерово, пр. Советский, 48; остановка «Драмтеатр»" />

    </RelativeLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/contact_nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer" />

</android.support.v4.widget.DrawerLayout>
